<br>
<div class="basic-grey">
  <p id="notice"><%= notice %></p>

    <h1><%= "#{t("message.listing")} #{@contacts.model.model_name.human(count: @contacts.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @contacts.model.human_attribute_name("name") %></th>
        <th><%= @contacts.model.human_attribute_name("kind") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle('white','#BDBDBD') %>">
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t('buttons.show'), contact %></td>
          <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
          <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('message.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @contacts %>
  <br>

  <%= link_to "#{t('buttons.new')} #{@contacts.model.model_name.human(count: 1)}", new_contact_path, class: "btn btn-primary" %>
  <%= link_to t('buttons.back'), root_path, class: "btn btn-warning" %>
  <!--< render partial: "/contacts/shared/teste"#, locals:{xyz: abc} >
  <= render partial: "/contacts/shared/teste" >-->
</div>
